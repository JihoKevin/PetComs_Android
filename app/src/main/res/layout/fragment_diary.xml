<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/diaryFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.diary.DiaryFragment">

        <androidx.recyclerview.widget.RecyclerView
                tools:listitem="@layout/item_record_icon"
                android:id="@+id/rv_ic_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <TextView
                android:id="@+id/current_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0000년 0월"
                app:layout_constraintTop_toBottomOf="@+id/rv_ic_record"
                app:layout_constraintLeft_toLeftOf="parent"/>

        <Switch
                android:id="@+id/swi_d_or_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rv_ic_record"
                app:layout_constraintRight_toRightOf="parent"/>

        <CalendarView
                android:id="@+id/month_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/current_month"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>