<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:id="@+id/fragment_dog_profile">

        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar_dog_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Toolbar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="#ccc"/>

                <Button
                        android:id="@+id/btn_close"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/ic_close"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="반려견 프로필"
                        android:textSize="24dp"/>

                <Button
                        android:id="@+id/btn_add"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/ic_add"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_pet"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@+id/appbar_dog_profile"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_launcher_background"
                android:layout_margin="60dp"/>

        <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/btn_toggle_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/img_pet"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="60dp">

        <Button
                android:id="@+id/btn_datepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021.08.25"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-kg -cm"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="암컷"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <TextView
                android:id="@+id/pet_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/btn_toggle_group"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:text="이름"
                android:textSize="24sp"
                android:layout_marginTop="60dp"
                android:padding="8dp"/>
        <TextView
                android:id="@+id/user_pet_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/pet_name"
                app:layout_constraintLeft_toRightOf="@+id/pet_name"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="럭키"
                android:textSize="24sp"
                android:padding="8dp"
                android:textAlignment="textEnd"/>

        <TextView
                android:id="@+id/pet_breed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/pet_name"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:text="견종"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:padding="8dp"/>
        <TextView
                android:id="@+id/user_pet_breed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/pet_breed"
                app:layout_constraintLeft_toRightOf="@+id/pet_breed"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="빠삐용"
                android:textSize="24sp"
                android:padding="8dp"
                android:textAlignment="textEnd"/>

        <TextView
                android:id="@+id/pet_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/pet_breed"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:text="나이"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:padding="8dp"/>
        <TextView
                android:id="@+id/user_pet_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/pet_age"
                app:layout_constraintLeft_toRightOf="@+id/pet_age"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="7"
                android:textSize="24sp"
                android:padding="8dp"
                android:textAlignment="textEnd"/>

        <TextView
                android:id="@+id/pet_is_neutered"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/pet_age"
                app:layout_constraintLeft_toLeftOf="parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:text="중성화"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:padding="8dp"/>
        <TextView
                android:id="@+id/user_pet_is_neutered"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/pet_is_neutered"
                app:layout_constraintLeft_toRightOf="@+id/pet_is_neutered"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="O"
                android:textSize="24sp"
                android:padding="8dp"
                android:textAlignment="textEnd"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>