<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_person_is_pinned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="핀한 사람"/>
    <TextView
            android:id="@+id/pin_count"
            app:layout_constraintRight_toLeftOf="@+id/tv_how_to_count"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0"/>
    <TextView
            android:id="@+id/tv_how_to_count"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="명"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pin_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_person_is_pinned"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>